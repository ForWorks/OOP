<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
  <children>
    <MenuBar accessibleRole="BUTTON" VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem mnemonicParsing="false" text="New" />
            <MenuItem mnemonicParsing="false" text="Open…" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Save" />
            <MenuItem mnemonicParsing="false" text="Save As…" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Edit">
          <items>
            <MenuItem mnemonicParsing="false" text="Cut" />
            <MenuItem mnemonicParsing="false" text="Copy" />
            <MenuItem mnemonicParsing="false" text="Paste" />
            <MenuItem mnemonicParsing="false" text="Delete" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="416.0" prefWidth="675.0" style="-fx-background-color: #fff;" VBox.vgrow="ALWAYS">
      <children>
            <Canvas height="600.0" layoutX="-1.0" layoutY="45.0" width="800.0">
               <effect>
                  <Bloom />
               </effect>
            </Canvas>
            <ToolBar layoutY="-2.0" prefHeight="49.0" prefWidth="799.0">
              <items>
                  <ComboBox prefHeight="25.0" prefWidth="100.0">
                      <items>
                          <FXCollections fx:factory="observableArrayList">
                              <String fx:value="Line" />
                              <String fx:value="Rectangle" />
                              <String fx:value="Ellipse" />
                              <String fx:value="Polyline" />
                              <String fx:value="Polygon" />
                              <String fx:value="Add shape" />
                          </FXCollections>
                      </items>
                      <promptText>
                          <String fx:value="Shapes" />
                      </promptText>
                      <cursor>
                        <Cursor fx:constant="HAND" />
                      </cursor>
                  </ComboBox>
                  <Separator orientation="VERTICAL" prefHeight="0.0" prefWidth="0.0" />
                <Button mnemonicParsing="false" text="Undo">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="46.0" text="Redo">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Separator orientation="VERTICAL" prefHeight="0.0" prefWidth="0.0" />
                  <TextField prefHeight="25.0" prefWidth="78.0" promptText="Pen weight">
                     <cursor>
                        <Cursor fx:constant="DEFAULT" />
                     </cursor>
                  </TextField>
                  <Label text="Pen color" />
                  <ColorPicker prefHeight="25.0" prefWidth="29.0">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </ColorPicker>
                  <Separator orientation="VERTICAL" prefHeight="0.0" prefWidth="0.0" />
                  <Label text="Brush color" />
                  <ColorPicker prefHeight="25.0" prefWidth="29.0">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </ColorPicker>
              </items>
            </ToolBar>
      </children>
